<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Harry-GPT</title>
  <script src="{{ url_for('static', filename='htmx-1.9.12.js') }}"></script>
  <script src="{{ url_for('static', filename='htmx-sse-1.9.12.js') }}"></script>
  <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='style.css') }}" />
</head>

<body>
  <header>
    <h1>Harry-GPT</h1>
    <form>
      <label>Model:</label>
      <select id="select-model" disabled>
        <option value="{{ default_model_name }}" selected>{{ default_model_name }}</option>
      </select>
      <button disabled>Info</button>
    </form>
  </header>

  <main id="messages" hx-ext="sse" sse-connect="/stream">
    <div sse-swap="token" hx-swap="beforeend" hx-target=".response:last-of-type"></div>
    <div sse-swap="end"   hx-swap="beforeend" hx-target="#messages"></div>
  </main>

  <footer>
    <div class="footer-content">
      <textarea id="chat-prompt" placeholder="Enter Prompt here..."
        hx-post="/chat"
        hx-vals="js:{'prompt': encodeURIComponent(document.getElementById('chat-prompt').value)}"
        hx-trigger="click from:#send-btn, enter"
        hx-target="#messages" hx-swap="beforeend"
        {# hx-swap-oob="delete:.continue-btn" #}
        hx-on::before-request="this.value = ''"
        hx-on:keypress="
          const isMobile = window.matchMedia('(max-width: 800px)').matches;
          if (event.keyCode === 13 && !event.shiftKey && !isMobile) {
            htmx.trigger(this, 'enter'); event.preventDefault();
          }"
      ></textarea>
      <button id="send-btn">Send</button>
    </div>
  </footer>
</body>

</html>